<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
    crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../public/styles/main.css">
    <title>The Honest Reader</title>
</head>
<body>
    <%- include("partials/header.ejs") %>

    <div class="p-5 text-center bg-body-tertiary" id="jumbotron">
        <div class="container py-5">
          <h1 class="text-body-emphasis" >Your Guide To Gripping Reads.</h1>
          <p class="col-lg-8 mx-auto lead">
            <br>
          <a href="/add">  <button class="btn btn-primary" type="button"> Create Review </a></button>
           
          </p>
        </div>
    </div>

    <div class="featuredPosts">
        <div class="featuredPosts">
            <% reviews.forEach(row => { %>
                <div class="postContainer">
                    <div class="imageAndHeading">
                        <img src="https://covers.openlibrary.org/b/olid/<%= row.olid %>-M.jpg">
                        <div class="reviewText"> 
                            <h3 class="reviewTitle" id="title<%= row.id %>">
                                <%= row.title %> - By <%= row.author %>
                            </h3>
                            <h4>Reviewed by: <%= row.reviewed_by %></h4>
                            <h5>Rating: <%= row.rating %>/10 </h5>
                        </div>
                    </div>
                    <p class="description"> <%= row.description %></p>
                    <div class="buttonsContainer">
                        <form action="/update" method="POST">
                            <input type="hidden" name="editReviewId" value="<%= row.id %>">    
                            <button class="btn btn-primary rounded-pill px-3" type="submit">Edit</button>
                        </form>
                        <form action="/delete" method="POST">
                            <button class="btn btn-danger rounded-pill px-3" type="submit" name="deleteReviewId" value="<%= row.id %>">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div> 
    </div>
    

   

    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>